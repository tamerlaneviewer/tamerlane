{
  "name": "tamerlane",
  "version": "0.4.1",
  "description": "A lightweight IIIF viewer for exploring, navigating, and searching annotated IIIF Presentation 3.0 resources",
  "private": true,
  "homepage": "https://tamerlaneviewer.github.io/tamerlane",
  "keywords": ["iiif", "viewer", "annotations", "react", "typescript", "accessibility"],
  "author": "Tamerlane IIIF Viewer Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tamerlaneviewer/tamerlane.git"
  },
  "bugs": {
    "url": "https://github.com/tamerlaneviewer/tamerlane/issues"
  },
  "dependencies": {
    "dompurify": "^3.2.4",
    "lucide-react": "^0.395.0",
    "maniiifest": "^1.4.7",
    "openseadragon": "^5.0.1",
    "postcss-preset-env": "^10.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.25.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^4.2.4",
    "zustand": "^5.0.6"
  },
  "scripts": {
    "prestart": "node scripts/generate-info.js",
    "prebuild": "node scripts/generate-info.js",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "build:css": "postcss src/index.css -o src/tailwind.css"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.12",
    "autoprefixer": "^10.4.20",
    "eslint-config-react-app": "^7.0.1",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.2",
    "postcss-cli": "^11.0.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "3.5.3",
    "tailwindcss": "^3.4.17"
  }
}
